{
  "name": "vuex-ltm",
  "version": "1.0.3",
  "description": "Vuex - Long Term Memory: Async modular persistence for Vuex store.",
  "keywords": [
    "Vuex",
    "persistence"
  ],
  "author": {
    "name": "Tomáš Vyčítal",
    "email": "tom.vycital@gmail.com",
    "url": "https://github.com/Thomaash"
  },
  "license": "(Apache-2.0 OR ISC)",
  "homepage": "https://github.com/Thomaash/vuex-ltm",
  "bugs": "https://github.com/Thomaash/vuex-ltm/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/Thomaash/vuex-ltm"
  },
  "main": "dist/esnext/esm.js",
  "types": "dist/types",
  "files": [
    "dist/**/*",
    "LICENSE*"
  ],
  "scripts": {
    "build": "npm run build:code && npm run build:types && npm run build:docs",
    "build:code": "rollup --config rollup.config.js",
    "build:docs": "typedoc --excludePrivate --excludeExternals --includeDeclarations --mode file --theme minimal --name 'Vuex - Long Term Memory' --out docs src",
    "build:types": "tsc --project tsconfig.types.json",
    "check": "es-check es5 dist/es5/*.js",
    "clean": "rimraf '{coverage,dist,docs}/*'",
    "fix": "npm run lint -- --fix",
    "lint": "eslint --ext .js,.ts src test *.js",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "TS_NODE_PROJECT='./tsconfig.test.json' nyc mocha",
    "test-watch": "TS_NODE_PROJECT='./tsconfig.test.json' mocha --watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": ">0.25%"
        }
      ],
      "@babel/typescript"
    ],
    "plugins": [
      [
        "@babel/transform-runtime",
        {
          "regenerator": true
        }
      ],
      "@babel/proposal-class-properties",
      "@babel/proposal-object-rest-spread"
    ]
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "timeout": 10000,
    "recursive": true,
    "require": [
      "tsconfig-paths/register",
      "ts-node/register",
      "jsdom-global/register",
      "mock-local-storage"
    ]
  },
  "nyc": {
    "all": true,
    "cache": false,
    "check-coverage": true,
    "per-file": true,
    "include": [
      "src/**/*"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts"
    ],
    "reporter": [
      "html",
      "text",
      "text-summary"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/runtime": "^7.5.5",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/chai": "^4.2.0",
    "@types/chrome": "0.0.88",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.2",
    "@types/sinon": "^7.0.13",
    "@types/sinon-chai": "^3.2.3",
    "@types/sinon-chrome": "^2.2.6",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "chai": "^4.2.0",
    "es-check": "^5.0.0",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-mocha": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "gh-pages": "^2.1.1",
    "husky": "^3.0.4",
    "jsdom": "^15.1.1",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^9.2.5",
    "mocha": "^6.2.0",
    "mock-local-storage": "^1.1.8",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "rollup": "^1.20.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript2": "^0.23.0",
    "sinon": "^7.4.1",
    "sinon-chai": "^3.3.0",
    "sinon-chrome": "^3.0.1",
    "temp-dir": "^2.0.0",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.5.3",
    "vue": "^2.6.10",
    "vuex": "^3.1.1"
  },
  "dependencies": {
    "deepmerge": "^4.0.0",
    "localforage": "^1.7.3"
  },
  "peerDependencies": {
    "vue": "^2.6.10",
    "vuex": "^3.1.1"
  }
}
