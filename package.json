{
    "name": "vuex-ltm",
    "version": "1.0.0",
    "description": "",
    "keywords": [],
    "author": "Tomáš Vyčítal <tom.vycital@gmail.com>",
    "license": "ISC",
    "main": "dist/index.js",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "build": "npm run build:app && npm run build:docs",
        "build:app": "tsc --build tsconfig.prod.json",
        "build:docs": "typedoc --excludePrivate --excludeExternals --includeDeclarations --mode file --theme minimal --name 'Vuex - Long Term Memory' --out docs src",
        "fix": "npm run lint -- --fix",
        "lint": "eslint --ext .js,.ts src test",
        "test": "TS_NODE_PROJECT='./tsconfig.test.json' nyc mocha",
        "testwatch": "TS_NODE_PROJECT='./tsconfig.test.json' mocha --watch"
    },
    "mocha": {
        "extension": [
            "ts"
        ],
        "timeout": 10000,
        "recursive": true,
        "require": [
            "tsconfig-paths/register",
            "ts-node/register",
            "jsdom-global/register",
            "mock-local-storage"
        ]
    },
    "nyc": {
        "all": true,
        "cache": false,
        "check-coverage": true,
        "per-file": true,
        "include": [
            "src/**/*"
        ],
        "extension": [
            ".ts"
        ],
        "exclude": [
            "**/*.d.ts",
            "**/*.spec.ts"
        ],
        "reporter": [
            "html",
            "text",
            "text-summary"
        ]
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/chrome": "0.0.85",
        "@types/mocha": "^5.2.6",
        "@types/node": "^12.0.2",
        "@types/sinon": "^7.0.11",
        "@types/sinon-chai": "^3.2.2",
        "@types/sinon-chrome": "^2.2.6",
        "@vue/eslint-config-standard": "^4.0.0",
        "@vue/eslint-config-typescript": "^4.0.0",
        "chai": "^4.2.0",
        "eslint": "^5.16.0",
        "eslint-plugin-mocha": "^5.3.0",
        "jsdom": "^15.1.0",
        "jsdom-global": "^3.0.2",
        "mocha": "^6.1.4",
        "mock-local-storage": "^1.1.8",
        "nyc": "^14.1.1",
        "sinon": "^7.3.2",
        "sinon-chai": "^3.3.0",
        "sinon-chrome": "^3.0.1",
        "ts-node": "^8.1.0",
        "tsconfig-paths": "^3.8.0",
        "typedoc": "^0.14.2",
        "typescript": "^3.4.5",
        "vue": "^2.6.10",
        "vuex": "^3.1.1"
    },
    "dependencies": {
        "deepmerge": "^3.2.0"
    },
    "peerDependencies": {
        "vue": "^2.6.10",
        "vuex": "^3.1.1"
    }
}
