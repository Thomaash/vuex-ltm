{
    "compilerOptions": {
        "target": "esnext",
        "module": "es2015",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "outDir": "./dist",
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "#/*": ["test/*"]
        },
        "typeRoots": ["./types", "node_modules/@types"]
    },
    "include": ["src", "test"],
    "exclude": ["node_modules", "**/__tests__/*"]
}
